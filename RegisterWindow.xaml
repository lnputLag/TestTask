<Window x:Class="TestTask.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTask"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="" Height="350" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Closing="Register_Window_Closing">
    <Grid>
        <StackPanel>
            <TextBlock Text="Регистрация" FontSize="30" FontWeight="Bold" TextAlignment="Center" Padding="15"/>
            <TextBox x:Name="textBoxLogin" Margin="10" materialDesign:HintAssist.Hint="Введите логин" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <PasswordBox x:Name="passBox" Margin="10" materialDesign:HintAssist.Hint="Введите пароль" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>
            <PasswordBox x:Name="passBox_2" Margin="10" materialDesign:HintAssist.Hint="Повторно введите пароль" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"/>
            <Grid>
                <Button HorizontalAlignment="Right" Content="Зарегестрироваться" Margin="0 10 10 0" Click="Button_Reg_Click"></Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
